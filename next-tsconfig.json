{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["node", "next"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./app/components/*"],
      "@/components/kpi/*": ["./app/components/kpi/*"],
      "@/types/*": ["./types/*"],
      "@/lib/*": ["./lib/*"]
    },
    "allowImportingTsExtensions": true
  },
  "include": ["next-env.d.ts", "app/**/*", "components/**/*", "types/**/*", "lib/**/*", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
